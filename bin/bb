#!/bin/bash

# Detect OS to find the correct mount path
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS SMB Path
    brain_box_dir="/Volumes/brainbox/vault"
else
    # Linux NFS Path
    brain_box_dir="/mnt/brainbox/vault"
fi

# Change to the directory
cd "$brain_box_dir" || {
    echo "‚ùå Error: Could not access brain-box directory at $brain_box_dir"
    echo "Check if the NAS is mounted!"
    exit 1
}

# Open in Neovim
nvim .
